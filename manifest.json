{
  "name": "@deskpro-apps/quickbooks",
  "title": "QuickBooks",
  "description": "View your QuickBooks customers linked with Deskpro tickets to streamline financial workflows and improve user interactions.",
  "version": "1.0.4",
  "scope": "agent",
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "secrets": "",
  "entityAssociations": {
    "linkedQuickBooksCustomers": {
      "entity": "person",
      "type": "external_id",
      "title": "QuickBooks Customer"
    }
  },
  "settings": {
    "use_advanced_connect": {
      "title": "Advanced Connect",
      "description": "Follow the setup guide and use your credentials to connect the app to Deskpro",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "order": 1
    },
    "use_sandbox": {
      "title": "Use Sandbox",
      "description": "Check if using QuickBooks sandbox",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "condition": "settings.use_advanced_connect == true",
      "order": 2
    },
    "company_id": {
      "title": "Company ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 3
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_advanced_connect == true",
      "order": 4
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_advanced_connect == true",
      "order": 5
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback", "height": "80px" },
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_advanced_connect == true",
      "order": 6
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://sandbox-quickbooks.api.intuit.com/v3/company/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://quickbooks.api.intuit.com/v3/company/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://oauth.platform.intuit.com/oauth2/v1/.*",
        "methods": ["POST"],
        "timeout": 20
      },
      {
        "url": "https://developer.api.intuit.com/v2/oauth2/tokens/revoke",
        "methods": ["POST"],
        "timeout": 20
      }
    ]
  }
}
